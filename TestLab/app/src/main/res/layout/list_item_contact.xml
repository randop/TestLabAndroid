<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
                name="clickListener"
                type="android.view.View.OnClickListener"/>
        <variable
                name="contact"
                type="com.randolphledesma.testlab.model.Contact" />
    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/grid_1_5"
            android:layout_marginTop="@dimen/grid_1_5"
            android:orientation="vertical"
            android:onClick="@{clickListener}">

        <TextView
            android:id="@+id/contact_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="@{contact.name}"
            android:textAppearance="?attr/textAppearanceListItem"
            android:gravity="center_horizontal"
            tools:text="Randolph Ledesma" />

        <TextView
                android:id="@+id/contact_item_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{contact.phone}"
                android:textAppearance="?attr/textAppearanceListItem"
                android:gravity="center_horizontal"
                tools:text="09001234567" />

    </LinearLayout>

</layout>