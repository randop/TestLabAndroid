<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
            android:id="@+id/qr_sheet_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:behavior_hideable="true"
            app:behavior_peekHeight="@dimen/qr_image_preview"
            android:padding="@dimen/grid_1_5"
            android:gravity="center"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
            tools:context=".ui.QrSheetFragment"
            tools:targetApi="o">

        <ImageView
                android:id="@+id/image_qr"
                android:layout_width="@dimen/qr_image_preview"
                android:layout_height="@dimen/qr_image_preview"
                tools:src="@drawable/ic_qr_randop" />

    </LinearLayout>
</layout>